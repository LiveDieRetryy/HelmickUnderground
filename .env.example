# Helmick Underground - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE (Vercel Postgres)
# ============================================
# Get these from Vercel Dashboard > Storage > Your Database > .env.local tab
POSTGRES_URL="postgres://username:password@host/database"
POSTGRES_PRISMA_URL="postgres://username:password@host/database?pgbouncer=true&connect_timeout=15"
POSTGRES_URL_NON_POOLING="postgres://username:password@host/database?sslmode=require"
POSTGRES_USER="username"
POSTGRES_HOST="host"
POSTGRES_PASSWORD="password"
POSTGRES_DATABASE="database"

# ============================================
# AUTHENTICATION
# ============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-256-bit-secret-key-here"

# Generate with bcrypt (10 rounds):
# node -e "const bcrypt = require('bcryptjs'); bcrypt.hash('YourPassword123', 10).then(console.log)"
ADMIN_PASSWORD_HASH="$2a$10$your-bcrypt-hash-here"

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
# For sending quotes and notifications
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-specific-password"
SMTP_FROM="Helmick Underground <noreply@helmickunderground.com>"

# ============================================
# EXTERNAL SERVICES (Optional)
# ============================================
# Google Analytics (if using GA4)
GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Google Maps API (if adding maps)
GOOGLE_MAPS_API_KEY="your-api-key-here"

# ============================================
# SECURITY SETTINGS
# ============================================
# Cookie settings
COOKIE_DOMAIN="helmickunderground.com"
COOKIE_SECURE="true"
COOKIE_SAME_SITE="strict"

# CORS settings
CORS_ORIGIN="https://helmickunderground.com"

# ============================================
# FEATURE FLAGS
# ============================================
NODE_ENV="production"
ENABLE_ANALYTICS="true"
ENABLE_ERROR_LOGGING="true"

# ============================================
# RATE LIMITING (defaults in code)
# ============================================
# Optional overrides
RATE_LIMIT_CONTACT_FORM="3"
RATE_LIMIT_LOGIN="5"
RATE_LIMIT_API_WRITES="60"

# ============================================
# FILE UPLOAD SETTINGS
# ============================================
MAX_FILE_SIZE="10485760"  # 10MB in bytes
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp,application/pdf"

# ============================================
# NOTES
# ============================================
# - Never commit .env to git (it's in .gitignore)
# - Use Vercel Dashboard to set production environment variables
# - For local development, copy this file to .env and fill in values
# - Restart development server after changing .env values
